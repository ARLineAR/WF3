{% extends "layout.html.twig" %}

{% block title 'Admin rubriques' %}

{% block content %}
    <h2>Rubriques</h2>
    <p><a href="{{ path('admin_category_edit') }}">Ajouter un lien</a></p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
